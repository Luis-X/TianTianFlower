# 公有仓库
source 'https://github.com/CocoaPods/Specs.git'
target "TianTian" do
use_frameworks!
pod 'Alamofire'	      	      		# 网络请求
pod 'SnapKit'		      		# 约束布局
pod 'FDFullscreenPopGesture', '~> 1.1'	#runtime左滑返回
#pod 'NullSafe', '~> 1.2.2'		#runtime防止数据转模为空处理
pod 'SwiftyJSON', '~> 3.1.4'		# JSON解析之王
pod 'DateToolsSwift', '~> 2.0.0'	# 时间工具
pod 'AsyncDisplayKit'	      		# Facebook 增强界面流畅性
pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git' #变色龙
pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3' # 强大动画API
pod 'Hero', '~> 0.1.7'			# 过度动画
pod 'DeviceKit', '~> 1.0'		# 设备信息
pod 'Realm', '~> 2.4.2'         	# 数据库
end


